{
 "manifest_version": 2,

 "name": "Tabzilla",
 "description": "Interactive way of displaying old-school boring tabs",
 "version": "3.1.2",
 "options_page": "popup.html",
 "homepage_url": "http://www.tabzilla.life",
 "icons": {"128": "images/logo128.png"},
 "browser_action": {
  "default_icon": "images/logo128.png",
   "default_popup": "popup.html"
 },
 "chrome_url_overrides": {
     "newtab": "index.html"
   },
   "background": {
     "scripts": ["src/js/background.js"]
   },
 "permissions": [
  "tabs",
  "storage",
  "activeTab"
  ]
}
